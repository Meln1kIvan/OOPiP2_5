<Window x:Class="OOPiP2_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Время будильника (дд.мм.гггг чч:мм:сс):" Margin="0 0 0 10" />
            <TextBox x:Name="alarmTimeTextBox" Width="200" Margin="0 0 0 10" />
            <Button x:Name="SetAlarmButton" Content="Установить будильник" Click="SetAlarmButton_Click" />
        </StackPanel>
    </Grid>
</Window>